<div class="auth-card card darken-1">
    <form class="card-content form">
        <div class="input-field col s12">
            <input id="login" type="email" class="validate">
            <label for="login">Электропочта</label>
        </div>
        <div class="input-field col s6">
            <input id="password" type="password" class="validate" required>
            <label for="password">Пароль</label>
        </div>
        <button type="submit" class="waves-effect waves-light btn login">Войти</button>
        <a class="waves-effect waves-light btn margin-left-auto" href="/registration">Регистрация</a>
    </form>
</div>

{{#section 'script'}}

    <script src="/js/login.js"></script>

{{/section}}
